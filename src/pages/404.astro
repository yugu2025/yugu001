---
import I18nKey from "@i18n/i18nKey";
import { i18n } from "@i18n/translation";
import MainGridLayout from "@layouts/MainGridLayout.astro";

const title = i18n(I18nKey.notFoundTitle);
const description = i18n(I18nKey.notFoundDescription);
const ctaLabel = i18n(I18nKey.notFoundCta);
---

<MainGridLayout title={title} description={description}>
    <div
        class="flex w-full rounded-[var(--radius-large)] overflow-hidden relative min-h-32"
    >
        <div
            class="card-base w-full px-9 py-12 text-center flex flex-col items-center"
        >
            <p class="text-sm font-semibold tracking-[0.5em] text-50 uppercase">
                404
            </p>
            <h1 class="text-4xl md:text-5xl font-bold text-90 mt-4">
                {title}
            </h1>
            <p class="text-base md:text-lg text-75 mt-4 max-w-2xl mx-auto">
                {description}
            </p>
            <a
                href="/"
                class="btn-regular mt-8 inline-flex h-12 px-6 rounded-xl font-semibold text-base gap-2"
                aria-label={ctaLabel}
            >
                {ctaLabel}
            </a>
        </div>
    </div>
</MainGridLayout>
